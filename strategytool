<script>
    let selectedPath = "";

    function selectGoal(choice) {
        selectedPath = choice;
        document.getElementById('step1').classList.remove('active');
        document.getElementById('step2').classList.add('active');
    }

    function submitToHubSpot(e) {
        e.preventDefault();
        const btn = document.getElementById('submit-btn');
        const name = document.getElementById('user-name').value;
        const email = document.getElementById('user-email').value;

        const nameParts = name.trim().split(" ");
        const firstName = nameParts[0];
        const lastName = nameParts.slice(1).join(" ") || "Client";

        btn.innerText = "Processing...";
        btn.disabled = true;

        const portalId = "244076763";
        const formId = "d8ae4c12-d5d6-4757-8d5a-fbb6f4f9f672";
        const url = `https://api.hsforms.com/submissions/v3/integration/submit/${portalId}/${formId}`;

        fetch(url, {
            method: "POST",
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                "fields": [
                    { "name": "firstname", "value": firstName },
                    { "name": "lastname", "value": lastName },
                    { "name": "email", "value": email }
                ],
                "context": { "pageUri": window.location.href, "pageName": "Maximize Growth Diagnostic" }
            })
        }).then(() => { showResults(); }).catch(() => { showResults(); });
    }

    function showResults() {
        document.getElementById('step2').classList.remove('active');
        document.getElementById('step3').classList.add('active');
        const title = document.getElementById('res-title');
        const desc = document.getElementById('res-desc');
        const sLink = document.getElementById('service-link');

        if (selectedPath === 'social') {
            title.innerText = "Social Media Packages & Digital Marketing";
            desc.innerText = "We'll build a custom bridge between your social content and high-quality leads, ensuring your business gets seen by the right audience.";
            sLink.innerText = "View Social Media Packages";
            sLink.href = "https://www.streamlined-solutionsllc.com/digital-marketing-services";
        } else if (selectedPath === 'seo') {
            title.innerText = "SEO Optimized Website / Landing Page";
            desc.innerText = "Your growth depends on visibility. We’ll build a technical foundation that dominates search rankings and converts visitors into buyers.";
            sLink.innerText = "Explore Web & SEO Solutions";
            sLink.href = "https://www.streamlined-solutionsllc.com/custom-website-development";
        } else if (selectedPath === 'systems') {
            title.innerText = "Operations & Systems Audit";
            desc.innerText = "Stop losing hours to manual administration. We implement digital toolsets that handle the heavy lifting while you're doing what matters most.";
            sLink.innerText = "Browse System Implementations";
            sLink.href = "https://www.streamlined-solutionsllc.com/operational-efficiency-framework";
        }
    }

    function restartQuiz() {
        document.getElementById('submit-btn').innerText = "Unlock Recommendations";
        document.getElementById('submit-btn').disabled = false;
        document.getElementById('step3').classList.remove('active');
        document.getElementById('step1').classList.add('active');
        document.getElementById('ss-lead-form').reset();
    }
</script>

